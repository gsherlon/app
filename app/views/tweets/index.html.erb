<h1>Tweets <%= link_to @user.username, user_path(@user) %></h1>

<table>
  <thead>
    <th>Status</th>
  </thead>
  <% @user.tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.status  %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'New Tweet', new_user_tweet_path(@user) %>
<%= link_to 'Back', users_path %>
